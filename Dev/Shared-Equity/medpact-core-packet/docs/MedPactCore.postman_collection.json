{
  "info": {
    "name": "MedPact Core API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/health"
      }
    },
    {
      "name": "Tenants - List",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/tenants"
      }
    },
    {
      "name": "Tenants - Create",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Demo Tenant\",\n  \"slug\": \"demo\"\n}"
        },
        "url": "{{baseUrl}}/api/tenants"
      }
    },
    {
      "name": "Auth - Login (DEV)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"tenantId\": \"{{tenantId}}\",\n  \"email\": \"admin@medpact.local\"\n}"
        },
        "url": "{{baseUrl}}/api/auth/login"
      }
    },
    {
      "name": "Metrics - Get Definitions",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": "{{baseUrl}}/api/metrics/definitions"
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://localhost:5001"
    },
    {
      "key": "tenantId",
      "value": ""
    },
    {
      "key": "token",
      "value": ""
    }
  ]
}